@page "/MyArtFulness/{ID}/{Slug}"

@using MySite.AppData
@using MySite.Pages.LandingPages

@inject NavigationManager NavigationManager


<section class="page-title section pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <h1 class="text-capitalize mb-0 text-lg">@MyArt.Heading</h1>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="section portfolio-single">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <img class="img-fluid w-100" src="@MyArt.IMG" alt="@MyArt.Heading" title="@MyArt.Heading" loading="lazy" decoding="async" importance="high" crossorigin="anonymous">
            </div>

            <div class="col-lg-6">
                <div class="project-info">
                    <h3 class="mb-4">@MyArt.Title <span>@MyArt.SubTitle</span></h3>
                    <p>@MyArt.Desription</p>

                    <div class="row mt-4">
                        <div class="col-lg-6">
                            <div class="info">
                                <h5 class="mb-0">Type</h5>
                                <p>@MyArt.Type</p>
                            </div>

                            <div class="info">
                                <h5 class="mb-0">Created Date</h5>
                                <p>@MyArt.CreatedOn</p>
                            </div>
                            <div class="mt-4">
                                <a href="#" class="btn btn-main btn-small">View project</a>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="info">
                                <h5 class="mb-0">Category</h5>
                                <p>@MyArt.Category</p>
                            </div>
                            <div class="info">
                                <h5>Share</h5>
                                <a href="#"><i class="ti-facebook"></i></a>
                                <a href="#"><i class="ti-intagram"></i></a>
                                <a href="#"><i class="ti-twitter"></i></a>
                                <a href="#"><i class="ti-linkedin"></i></a>
                                <a href="#"><i class="ti-snapchat"></i></a>
                                <a href="#"><i class="ti-youtube"></i></a>
                                <a href="#"><i class="ti-tiktok"></i></a>
                                <a href="#"><i class="ti-pinterest"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-6 text-center">

                @{

                    if (MyPreviousArt != null)
                    {
                        <a href="@MyPreviousArt.URL" title="@MyPreviousArt.Heading" class="btn btn-dark">Previous Work</a>
                    }

                    if (MyNextArt != null)
                    {
                        <a href="@MyNextArt.URL" title="@MyNextArt.Heading" class="btn btn-dark">Next Work</a>
                    }

                }

            </div>
        </div>
    </div>
</section>


@code
{

    [Parameter]
    public long ID { get; set; }

    [Parameter]
    public string Slug { get; set; }

    Art MyArt = null;
    Art MyPreviousArt = null;
    Art MyNextArt = null;

    protected override void OnInitialized()
    {
        long MyPreviousArtID = this.ID - 1;
        long MyNextArtID = this.ID + 1;

        this.MyArt = MyArts.GetMyArt(this.ID, this.Slug);
        this.MyPreviousArt = MyArts.GetMyArt(MyPreviousArtID);
        this.MyNextArt = MyArts.GetMyArt(MyNextArtID);
    }

    private void Navigate()
    {
        NavigationManager.NavigateTo("MyArtFulness");
    }

}